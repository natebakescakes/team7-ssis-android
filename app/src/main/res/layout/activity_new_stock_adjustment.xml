<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/addItem_btn"
        style="@android:style/Widget.Material.Button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="105dp"
        android:text="@string/add_item"
        android:textSize="18sp" />

    <Button
        android:id="@+id/submit_btn"
        style="@android:style/Widget.Material.Button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/addItem_btn"
        android:layout_marginEnd="0dp"
        android:text="Submit"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:text="Date:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/label_requester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:text="Submitted By:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sa_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/clerk-name"
        android:layout_alignTop="@+id/textView4"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/clerk-name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/label_requester"
        android:layout_marginStart="137dp"
        android:text="TextView"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/sa_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="403dp"
        android:layout_below="@+id/addItem_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/make_stock_adjustments"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

</RelativeLayout>