<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="149dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/card_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delegated Managerial Rights to " />

            <TextView
                android:id="@+id/card_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_name_label"
                android:layout_centerHorizontal="true"
                android:text="Mr. Employee Employee"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_start_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_name_value"
                android:text="Start Date" />

            <TextView
                android:id="@+id/card_start_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_start_date_label"
                android:layout_centerHorizontal="true"
                android:text="Wednesday, 1 August 2018"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_end_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_start_date_value"
                android:text="End Date" />

            <TextView
                android:id="@+id/card_end_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_end_date_label"
                android:layout_centerHorizontal="true"
                android:text="Friday, 1 August 2018"

                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/card_end_date_value"
                android:text="Inactive"
                android:textStyle="italic" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>